<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Signup_Sp"
    android:background="@color/black">







    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:text="SignUp"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@null"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Enter Name"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/colorTextSubtitle"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/lv"
            tools:ignore="NotSibling" />

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/background_view1_indicator"
            app:layout_constraintBottom_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etName"/>


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@null"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Enter Email-Id"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/colorTextSubtitle"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@+id/etName"
            tools:ignore="NotSibling" />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/background_view2_indicator"
            app:layout_constraintBottom_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etEmail"/>


        <EditText
            android:id="@+id/etMobileNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@null"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Enter Mobile Number"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="number"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/colorTextSubtitle"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/_13ssp"
            android:maxLength="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@+id/etEmail"
            tools:ignore="NotSibling" />

        <View
            android:id="@+id/view3"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/background_view3_indicator"
            app:layout_constraintBottom_toBottomOf="@id/etMobileNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etMobileNo"/>


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@null"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Enter Password"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/colorTextSubtitle"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@+id/etMobileNo"
            tools:ignore="NotSibling" />

        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/background_view4_indicator"
            app:layout_constraintBottom_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etPassword"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="Register"
        android:id="@+id/btnsignup"
        />

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Already Register?"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="Sign In / Login"
            android:id="@+id/btnsignin"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>







